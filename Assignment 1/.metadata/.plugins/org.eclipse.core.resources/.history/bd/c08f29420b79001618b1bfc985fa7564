public class FlexibleCounter implements ResetableCounter {
	int value;
	int step;
	int value1;
	int step1;
    public FlexibleCounter(int v, int s) {
        value = v;
        step = s;
        value1 = v;
        step1 = v;
	}
	public int value() {
		// TODO Auto-generated method stub
		return this.value;
	}

	public void up() {
		// TODO Auto-generated method stub
		this.value = this.value + this.step;
	}

	public void down() {
		// TODO Auto-generated method stub
		this.value = this.value - this.step;
	}

	public void reset() {
		// TODO Auto-generated method stub
		this.value = value1;
		this.step = step1;
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
